{
  "name": "Ricoh to Excel",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_icon": "./icon.png",
    "default_title": "icon"
  },
  "permissions": [
    "tabs",
    "activeTabs",
    "https://ricohspaces.app/en/home",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://ricohspaces.app/en/home"],
      "js": ["./foreground.js"]
    }
  ]
}
